# This (ugly) setup assumes:
#  CMAKE_PREFIX_PATH = LUA_BINDIR
#  CMAKE_INSTALL_PREFIX = PREFIX

# Define Torch basic subpaths
SET(MKLTorch_INSTALL_PREFIX "@Torch_INSTALL_PREFIX@")

SET(MKLTorch_INSTALL_LIB_SUBDIR "@MKLTorch_INSTALL_LIB_SUBDIR@")
SET(MKLTorch_INSTALL_INCLUDE_SUBDIR "@MKLTorch_INSTALL_INCLUDE_SUBDIR@")
SET(MKLTorch_INSTALL_CMAKE_SUBDIR "@MKLTorch_INSTALL_CMAKE_SUBDIR@")


SET(CMAKE_MODULE_PATH "${MKLTorch_INSTALL_PREFIX}/${MKLTorch_INSTALL_CMAKE_SUBDIR}" "${CMAKE_MODULE_PATH}")
SET(CMAKE_INSTALL_PREFIX "${MKLTorch_INSTALL_PREFIX}") # override


SET(MKLTorch_INSTALL_LIB "${MKLTorch_INSTALL_PREFIX}/${MKLTorch_INSTALL_LIB_SUBDIR}")
SET(MKLTorch_INSTALL_INCLUDE "${MKLTorch_INSTALL_PREFIX}/${MKLTorch_INSTALL_INCLUDE_SUBDIR}")
SET(MKLTorch_INSTALL_CMAKE "${MKLTorch_INSTALL_PREFIX}/${MKLTorch_INSTALL_CMAKE_SUBDIR}")


# Define Torch basic targets
# INCLUDE(TorchExports)

INCLUDE_DIRECTORIES("${MKLTorch_INSTALL_INCLUDE}")
LINK_DIRECTORIES("${MKLTorch_INSTALL_LIB}")

MESSAGE(STATUS "Found MKLTorch in ${MKLTorch_INSTALL_PREFIX}")
